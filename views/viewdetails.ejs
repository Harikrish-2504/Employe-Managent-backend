      <div class="editEmpform rounded-4 mt-3 " id="editData">
        <div class="card ">
          <div class="heading p-4 d-flex justify-content-between">
            <h3>Edit Employee</h3>
            <button type="button" onclick="editFormClose()" class="btn btn-lg"><i class="fa-solid fa-x"></i></button>
          </div>
          <div class="body px-4">
            <div class="col-lg">
              <div class="d-flex gap-5 align-items-center">
                <input type="file" id="Editupload"  accept="image/jpg,image/jpeg,image/png" name="image" / hidden>
                <label for="Editupload" class="editupload_sec mb-3">
                  <div class="edit-imgsec"><img src="" id="editImgPrew" class="p-3" alt="" /></div>
                </label>
                <label for="Editupload" class="ChangBtn rounded-4">Change</label>
              </div>
            </div>

            <div class="row">
              <div class="col-lg-3 mb-3">
                <label for="editSalutation" class="form-label mb-2">Salutation</label>
                <select class="form-select form-control rounded-3" id="editSalutation">
                  <option selected value="">select</option>
                  <option value="Mr">Mr</option>
                  <option value="Ms">Ms</option>
                  <!-- <option value="3">Three</option> -->
                </select>
                <span id="editSalutationValidation" class="addValidation"></span>
              </div>
              <div class="col-lg-4 mb-3">
                <label for="editFirstname" class="form-label mb-2">First Name</label>
                <input type="text" class="form-control rounded-3" placeholder="John" id="editFirstname" />
                <span id="editFirstnameValidation" class="addValidation"></span>

              </div>
              <div class="col-lg-4 mb-3">
                <label for="editLastname" class="form-label mb-2">Last Name</label>
                <input type="text" class="form-control rounded-3" placeholder="Doe" id="editLastname" />
                <span id="editLastnameValidation" class="addValidation"></span>

              </div>
            </div>
            <div class="row">
              <div class="col-lg-6 mb-3">
                <label for="editemailadd" class="form-label">Email Address </label>
                <input type="email" class="form-control rounded-3" id="editemailadd" placeholder="mail@simmmple.com" />
                <span id="editemailaddValidation" class="addValidation"></span>

              </div>
              <div class="col-lg-6 mb-3">
                <label for="editMobile" class="form-label">Mobile Number </label>
                <input type="tel" class="form-control rounded-3" id="editMobile" placeholder="enter mobile number" />
                <span id="editMobileValidation" class="addValidation"></span>

              </div>
            </div>
            <div class="row">
              <div class="col-lg-6 mb-3">
                <label for="userName" class="form-label">Username </label>
                <input type="text" class="form-control rounded-3" id="edituserName" placeholder="enter Username" />
                <span id="edituserNameValidation" class="addValidation"></span>

              </div>
              <div class="col-lg-6 mb-3">
                <label for="Password" class="form-label">Password </label>
                <input type="password" class="form-control rounded-3" id="editPassword" placeholder="enter password" />
                <span id="editPasswordValidation" class="addValidation"></span>

              </div>
            </div>
            <div class="row">
              <div class="col-lg-6 mb-3">
                <label class="form-label" for="editDob">Date of Birth</label>
                <input
                  type="date"
                  class="form-control p-2 px-3"
                  id="editDob"
                  placeholder="select date of birth"
                />
                <span id="editDobValidation" class="addValidation"></span>

              </div>
              <div class="col-lg-6 mb-3">
                <label  class="form-label">Gender</label>
                <div class="d-flex gap-3">
                  <div class="form-check col-lg-3">
                    <input class="form-check-input" type="radio"  value="Male" name="editGenders" id="checkMale" />
                    <label class="form-check-label" for="checkMale"> Male </label>
                  </div>
                  <div class="form-check col-lg-2">
                    <input
                      class="form-check-input"
                      type="radio"
                      name="editGenders"
                      value="Female"
                      id="checkFemale"
                      checked
                    />
                    <label class="form-check-label" for="checkFemale"> Female </label>
                  </div>
                </div>
                <span id="editGendersValidation" class="addValidation"></span>

              </div>
            </div>
            <div class="row">
              <div class="col-lg-12 mb-3">
                <label for="editQualification" class="form-label mb-2">Qualification </label>
                <input
                  type="text"
                  class="form-control rounded-3"
                  placeholder="enter your qualification"
                  id="editQualification"
                />
                <span id="editQualificationValidation" class="addValidation"></span>

              </div>
            </div>
            <div class="row">
              <div class="col-lg-12 mb-3">
                <label for="editAddress" class="form-label mb-2">Address </label>
                <input type="text" class="form-control rounded-3" placeholder="enter address" id="editAddress" />
                <span id="editAddressValidation" class="addValidation"></span>

              </div>
            </div>
            <div class="row">
              <div class="col-lg-6 mb-3">
                <label for="editcountry" class="form-label mb-2">Country</label>
                <select class="form-select form-control rounded-3" id="editcountry">
                  <option selected value="">select Country</option>
                  <option value="INDIA">INDIA</option>
                  <option value="USA">USA</option>
                  <option value="UAE">UAE</option>
                  <option value="CANNADA">CANNADA</option>
                </select>
                <span id="editcountryValidation" class="addValidation"></span>

              </div>
              <div class="col-lg-6 mb-3">
                <label for="editState" class="form-label mb-2">State</label>
                <select class="form-select form-control rounded-3" id="editState">
                  <option selected value="">select state</option>
                  <option value="kerala">kerala</option>
                  <option value="Delhi">Delhi</option>
                  <option value="karnataka">karnataka</option>
                  <option value="Goa">Goa</option>
                </select>
                <span id="editStateValidation" class="addValidation"></span>

              </div>
            </div>
            <div class="row">
              <div class="col-lg-6">
                <label for="editCity" class="form-label mb-2">City</label>
                <input type="text" class="form-control rounded-3" placeholder="enter city" id="editCity" />
                <span id="editCityValidation" class="addValidation"></span>

              </div>
              <div class="col-lg-6">
                <label for="editZip" class="form-label mb-2">Pin/Zip</label>
                <input type="text" class="form-control rounded-3" placeholder="enter pin/zip" id="editZip" />
                <span id="editZipValidation" class="addValidation"></span>

              </div>
            </div>
            <div class="row">
              <div class="addEmpcard-buttons">
                <div class="d-flex justify-content-end py-3 gap-3">
                  <button type="button" onclick="editFormClose()" class="btn btn-lg">Cancel</button>
                  <button type="button" id="editSubmitBtn" class="btn btn-primary rounded-4">Add Employee</button>
                </div>
              </div>
            </div>
          </div>
        </div>
