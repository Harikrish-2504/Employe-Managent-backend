<div class="addEmpform rounded-4" id="addData">
    <div class="card ">
      <form id="AddDataForm">
      <div class="heading p-4 d-flex justify-content-between">
        <h3>Add Employee</h3>
        <button type="button" onclick="addFormClose()" class="btn btn-lg"><i class="fa-solid fa-x"></i></button>
      </div>
      <div class="body px-4">
        <div class="col-lg-12">
          <input type="file" id="upload" accept="image/jpg,image/jpeg,image/png" name="image" onchange="avatarPreview()"/>
          <label id="uploadLabel" for="upload" class="upload_sec form-label d-flex flex-column align-items-center p-4 mb-3">
           <div id="uploadicons" class="text-center"> <i class="fa-solid fa-upload"></i>
            <h5>Upload Image</h5>
            <h6>PNG, JPG files are allowed</h6>
          </div>
            <img id="avatarimg" src="" alt="">
          </label>
        </div>
        <div class="row">
          <div class="col-lg-3 mb-3">
            <label for="Salutation" class="form-label mb-2">Salutation</label>
            <select class="form-select form-control rounded-3" id="Salutation">
              <option selected value="">select</option>
              <option value="Mr">Mr</option>
              <option value="Ms">Ms</option>
             
            </select>
            <span id="SalutationValidation" class="addValidation"></span>

          </div>
          <div class="col-lg-4 mb-3">
            <label for="Firstname" class="form-label mb-2">First Name</label>
            <input type="text" class="form-control rounded-3" placeholder="John" id="Firstname" />
            <span id="FirstnameValidation" class="addValidation"></span>

          </div>
          <div class="col-lg-4 mb-3">
            <label for="Lastname" class="form-label mb-2">Last Name</label>
            <input type="text" class="form-control rounded-3" placeholder="Doe" id="Lastname" />
            <span id="LastnameValidation" class="addValidation"></span>

          </div>
        </div>
        <div class="row">
          <div class="col-lg-6 mb-3">
            <label for="emailadd" class="form-label">Email Address </label>
            <input type="email" class="form-control rounded-3" id="emailadd" placeholder="mail@simmmple.com" />
            <span id="emailaddValidation" class="addValidation"></span>

          </div>
          <div class="col-lg-6 mb-3">
            <label for="Mobile" class="form-label">Mobile Number </label>
            <input type="number" class="form-control rounded-3" id="Mobile" placeholder="enter mobile number" />
            <span id="MobileValidation" class="addValidation"></span>

          </div>
        </div>
        <div class="row">
          <div class="col-lg-6 mb-3">
            <label for="userName" class="form-label">Username </label>
            <input type="text" class="form-control rounded-3" id="userName" placeholder="enter Username" />
            <span id="userNameValidation" class="addValidation"></span>

          </div>
          <div class="col-lg-6 mb-3">
            <label for="Password" class="form-label">Password </label>
            <input type="password" class="form-control rounded-3" id="Password" placeholder="enter password" />
            <p id="PasswordValidation" class="addValidation"></p>

          </div>
        </div>
        <div class="row align-items-center">
          <div class="col-lg-6 mb-3">
            <label class="form-label" for="DOB">Date of Birth</label>
            <input
              type="date"
              class="form-control p-2 px-3"
              id="DOB"
              placeholder="select date of birth"
            />
            <span id="DOBValidation" class="addValidation"></span>

          </div>
          <div class="col-lg-6 mb-3">
            <label  class="form-label">Gender</label>
            <div class="d-flex gap-3">
              <div class="form-check col-lg-3">
                <input class="form-check-input" id="forMale" value="Male" type="radio" name="Gender"  />
                <label class="form-check-label" for="forMale"> Male </label>
              </div>
              <div class="form-check col-lg-2">
                <input class="form-check-input" type="radio" id="forFemale" value="Female"
                  name="Gender"/>
                <label class="form-check-label" for="forFemale"> Female </label>
              </div>

            </div>
            <span id="GenderValidation" class="addValidation"></span>

          </div>
        </div>
        <div class="row">
          <div class="col-lg-12 mb-3">
            <label for="Qualification" class="form-label mb-2">Qualification </label>
            <input
              type="text"
              class="form-control rounded-3"
              placeholder="enter your qualification"
              id="Qualification"
            />
            <span id="QualificationValidation" class="addValidation"></span>

          </div>
        </div>
        <div class="row">
          <div class="col-lg-12 mb-3">
            <label for="Address" class="form-label mb-2">Address </label>
            <input type="text" class="form-control rounded-3" placeholder="enter address" id="Address" />
            <span id="AddressValidation" class="addValidation"></span>

          </div>
        </div>
        <div class="row">
          <div class="col-lg-6 mb-3">
            <label for="Country" class="form-label mb-2">Country</label>
            <select class="form-select form-control rounded-3" id="Country">
              <option selected value="">select Country</option>
              <option value="INDIA">INDIA</option>
              <option value="USA">USA</option>
              <option value="UAE">UAE</option>
              <option value="CANNADA">CANNADA</option>
            </select>
            <span id="CountryValidation" class="addValidation"></span>

          </div>
          <div class="col-lg-6 mb-3">
            <label for="state" class="form-label mb-2">State</label>
            <select class="form-select form-control rounded-3" id="state">
              <option selected value="">select state</option>
              <option value="kerala">kerala</option>
              <option value="Delhi">Delhi</option>
              <option value="karnataka">karnataka</option>
              <option value="Goa">Goa</option>
            </select>
            <span id="stateValidation" class="addValidation"></span>

          </div>
        </div>
        <div class="row">
          <div class="col-lg-6">
            <label for="city" class="form-label mb-2">City</label>
            <input type="text" class="form-control rounded-3" placeholder="enter city" id="city" />
            <span id="cityValidation" class="addValidation"></span>

          </div>
          <div class="col-lg-6">
            <label for="pinzip" class="form-label mb-2">Pin/Zip</label>
            <input type="text" class="form-control rounded-3" placeholder="enter pin/zip" id="pinzip" />
            <span id="pinzipValidation" class="addValidation"></span>

          </div>
        </div>
        <div class="row">
          <div class="addEmpcard-buttons">
            <div class="d-flex justify-content-end py-3 gap-3">
              <button type="button" onclick="closeFunction()" class="btn btn-lg">Cancel</button>
              <button type="button" id="addSubmit" class="btn btn-primary rounded-4">Add Employee</button>
            </div>
          </div>
        </div>
      </div>
    </form>
    </div>
  </div>